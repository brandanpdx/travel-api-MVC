@{
  Layout = "_Layout";
}

@using TravelApiMVC.Models;
@model TravelApiMVC.Models.Destination;

  <h2>Destination Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.City)</h3>

@if(@ViewBag.theseReviews.Count == 0)
{
  <p>This destination does not have any reviews yet.</p>
}
else
{
  <h4>Reviews for this destination:</h4>
  <ul>
  @foreach(var join in ViewBag.theseReviews)
  {
    <li>📝@join.ReviewText</li>
    <li>📊@join.Rating</li>
    <br>
  }
  </ul>
}

<button class="btn btn-secondary">@Html.ActionLink("🌍", "Index")</button>
<button class="btn btn-secondary">@Html.ActionLink("✏️", "Edit", new { id = Model.DestinationId })</button>
<button class="btn btn-danger">@Html.ActionLink("➖", "Delete", new { id = Model.DestinationId })</button>