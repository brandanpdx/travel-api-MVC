@{
  Layout = "_Layout";
}

@using TravelApiMVC.Models;
@model List<TravelApiMVC.Models.Destination>;

<h1>Destinations!</h1>

@if (@Model.Count == 0)
{
  <h3>No destinations have been added yet!</h3>
} 

@foreach (Destination destination in Model)
{
  <div class="scroll">

  <ul>
    <li>🌍Country: @destination.Country</li>
    <li>🏙️City: @Html.ActionLink($"{destination.City}", "Details", new { id = destination.DestinationId })</li>
    <li>📊Rating: @destination.Rating</li>
  </ul>

  </div>
}

 <button class="btn btn-success">@Html.ActionLink("➕", "Create", "Destination")</button>