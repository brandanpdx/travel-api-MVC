@{
  Layout = "_Layout";
}

@using TravelApiMVC.Models;
@model TravelApiMVC.Models.Destination;

<h2>Edit Destination</h2>

<h4>Edit this Destination: @Html.DisplayFor(model => model.City)</h4>

@using (Html.BeginForm("Details", "Destination", FormMethod.Post))
{
    <input type="hidden" id="id" name="id" value="@(Model.DestinationId)">

    @Html.LabelFor(model => model.Country)
    @Html.EditorFor(model => model.Country)

    @Html.LabelFor(model => model.City)
    @Html.EditorFor(model => model.City)

    @Html.LabelFor(model => model.Rating)
    @Html.EditorFor(model => model.Rating)

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to destinations", "Index")</p>